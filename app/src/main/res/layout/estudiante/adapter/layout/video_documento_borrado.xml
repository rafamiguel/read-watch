<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutVidDocBorrado"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:baselineAligned="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/img"
        android:contentDescription="@string/docborradodes"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/doc" />
</LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblLinkNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/urlejemplo"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/separador1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/lblMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/motivoejemplo"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/separador2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/lblCastigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/castigoejemplo"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/separador3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
