<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".estudiante.fragment.SeleccionarSemestre">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lbl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numerouno"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numerodos"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl1" />

        <TextView
            android:id="@+id/lbl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numerotres"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl2" />

        <TextView
            android:id="@+id/lbl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numerocuatro"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl3" />

        <TextView
            android:id="@+id/lbl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numerocinco"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl4" />

        <TextView
            android:id="@+id/lbl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/diseno_semestre"
            android:drawableStart="@drawable/ic_numeroseis"
            android:gravity="center_vertical"
            android:text="@string/semestre"
            android:textColor="#020202"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lbl5" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>

</android.support.constraint.ConstraintLayout>