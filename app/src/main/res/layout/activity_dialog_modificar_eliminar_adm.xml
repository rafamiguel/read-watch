<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblAnadir"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:background="#FFF7F7"
        android:drawableRight="@android:drawable/ic_menu_edit"
        android:drawableTint="#0622D5"
        android:text="Modificar"
        android:textColor="#0B0B0C"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblEliminar"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginTop="5dp"
        android:background="#FFF7F7"

        android:drawableRight="@android:drawable/ic_menu_delete"
        android:drawableTint="#FF0303"
        android:drawableTintMode="src_in"
        android:text="Eliminar"
        android:textColor="#090808"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
